{
  "manifest_version": 3,
  "name": "AI Interview Helper (Hybrid)",
  "version": "1.2",
  "description": "AI-powered interview assistant with Popup and Side Panel modes.",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],

  "host_permissions": [
    "http://localhost:3000/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Interview Helper"
  },

  "side_panel": {
    "default_path": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*", "<all_urls>"],
      "js": ["content.js"]
    }
  ]
}